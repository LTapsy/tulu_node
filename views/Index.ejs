<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="icon" type="image/png" href="images/favicon.png" />
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tulu Canada</title>
  <link rel="stylesheet" href="styles/reset.css" />
  <style>
    body{
      height:100vh;
      background: #79C6AC;
      background: url('images/comingSoon.jpg'),linear-gradient(#79C6AC,rgba(121, 198, 172, 0.26));
      background-blend-mode: soft-light;
      background-size: cover;
      background-position:center;
      justify-content: center;
      align-items: center;
    }
    img{
      width:150px;
      filter:drop-shadow(0 10px 10px #00000052);
    }
    h1{
      color:white;
      margin:30px 0 0 0;
      filter:drop-shadow(0 10px 10px #0000003b);
    }
  </style>
  <script type="text/javascript" src="jquery/dist/jquery.min.js"></script>
</head>
<body>
  <img src="images/tulu-logo_white.png" alt="">
  <h1>Coming Soon!</h1>
</body>
<script>
  setTimeout(pulseIn, 500);
  function pulseIn(){
    document.querySelector('img').style = "transform:scale(1.08);transition:2s;filter:drop-shadow(0 15px 15px #00000013);"
    document.querySelector('h1').style = "transform:scale(1.08);transition:2s;filter:drop-shadow(0 15px 15px #00000013);"
    setTimeout(pulseOut, 2000);
  }
  function pulseOut(){
    document.querySelector('img').style = "transform:scale(1);transition:2s;filter:drop-shadow(0 10px 10px #00000052);"
    document.querySelector('h1').style = "transform:scale(1);transition:2s;filter:drop-shadow(0 10px 10px #00000052);"
    setTimeout(pulseIn, 2000);
  }
</script>
</html>