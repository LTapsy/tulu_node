<!-- THIS NEEDS FIXING -->
    <div class="container body-content messages" style="margin:50px 0 0 0;">
        <h2>Messages</h2>
        <!-- <button class="fix" stlye=""></button> -->
        <div class="messageContainer">
            <ul id="MessagesList">
            </ul>
        </div>
        <div id="MessagesDiv">
        </div>
        <div class="messageThread">
            <div class="boxContainer">
                <div class="inbox" onclick="showInbox()">
                    Inbox
                </div>
                <div class="outbox" onclick="showOutbox()">
                    Outbox
                </div>
            </div>
            <ul class="messageThreadContainer" id="messageInboxThreadContainer">
            </ul>
            <ul class="messageThreadContainer" id="messageOutboxThreadContainer" style="display:none;">
            </ul>
        </div>

        <div class="newMessageContainer">
            <div class="wrapper">
            <div id="DealerList" style="visibility: hidden"></div>
            <div id="DealerVehicles" style="visibility: hidden"></div>
            <div id="DealerUsers" style="visibility: hidden"></div>
            <div id="TuluList" style="visibility: hidden"></div>
                <input type="hidden" id="ThreadValueId" value="" />
                <label>Subject:</label>
                <input type="text" id="SubjectText" value="" />
                <label>Body:</label>
                <input type="text" id="BodyText" value="" />
                <label>Is Read:</label>
                <select id="IsReadSelect" disabled>
                    <option value="0">False</option>
                    <option value="1">True</option>
                </select>
                <button onclick="NewMessage();">Send Message</button>
            </div>
        </div>
        <div class="replyMessageContainer">
            <div class="wrapper">
            <div id="DealerList" style="visibility: hidden"></div>
            <div id="DealerVehicles" style="visibility: hidden"></div>
            <div id="DealerUsers" style="visibility: hidden"></div>
            <div id="TuluList" style="visibility: hidden"></div>
                <input type="hidden" id="ReaplyThreadValueId" value="" />
                <label>Subject:</label>
                <input type="text" id="ReplySubjectText" value="" disabled/>
                <label>Body:</label>
                <input type="text" id="ReplyBodyText" value="" />
                <label>Is Read:</label>
                <select id="IsReadSelect">
                    <option value="0">False</option>
                    <option value="1">True</option>
                </select>
                <button onclick="replyMessage();">Send Message</button>
            </div>
        </div>
        <div onclick="showNewMessage();" class="newMessage">
            New Message
        </div>
        <div onclick="showReplyMessage();" class="replyMessage">
            Send Reply
        </div>
    </div>

</body>
<script src="Js/sideMenu.js"></script>
