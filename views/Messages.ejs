<script>
    window.onload = function () {
        ListDealers().then(function (results) {
            var html = '<label>Dealers:</label> <select id="DealerSelect" onchange="GetDealerValues();"><option value=""></option>';
            for (var i = 0; i < results.length; i++) {
                html += '<option value="' + results[i].id + '">' + results[i].name + '</option>';
            }
            html += '</select>';
            $("#DealerList").empty();
            $("#DealerList").append(html);
            GetCurrentUser();
            
            if (userRole === "Tulu") {
                document.getElementById("DealerList").style.visibility = "visible";
                document.getElementById("DealerVehicles").style.visibility = "visible";
                document.getElementById("DealerUsers").style.visibility = "visible";
                console.log("user is a tulu!!!");
            }else {
                document.getElementById("TuluList").style.visibility = "visible";
                console.log("user is not a tulu!!")
            }
        });
        var hash;
        var hashes = window.location.href.slice(window.location.href.indexOf("?") + 1).split("&");
        
        for (var i = 0; i < hashes.length; i++) {
            hash = hashes[i].split("=");
            if (hash[0] === "TargetId") {
                selectedTuluId = hash[1];
                document.querySelector('.newMessageContainer').style = 'display:flex;';
                SelectedTulu();
            }else{
                TestTuluList();
            }
        }
    }
</script>


